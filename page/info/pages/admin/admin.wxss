@import "/page/common/lib/weui.wxss";

.page-body {
  display:        flex;
  flex-direction: column;
  min-height:     100%;
  font-size:      32rpx;
  font-family:    -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}

.brief-body {
  margin: 32rpx 0;
}

.brief-section {
  background-color: #FFF;
  margin-bottom:    1px;
  padding:          16rpx 32rpx;
}

.brief-item-title {
}

.brief-item-content {
  font-size: 32px;
}

.brief-item-addition {
  font-size: 12px;
  color: #888888;
}

.special-item-font-green {
  color: forestgreen;
}

.navi-body {
}

.navi-section {
  display:          flex;
  flex-flow:        row;
  justify-content:  space-between;
  align-items:      center;
  background-color: #FFF;
  margin-bottom:    1px;
  padding:          16rpx 32rpx;
}

.navi-item-main {
}

.navi-item-main-title {
  font-weight: 600;
}

.navi-item-main-desc {
  font-size: 12px;
  color: #888888;
}

.navi-item-sub {
}

.navigator-navi-arrow {
  display:      inline-block;
  height:       18rpx;
  width:        18rpx;
  border-width: 4rpx 4rpx 0 0;
  border-color: #888888;
  border-style: solid;
  transform:    matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
}
