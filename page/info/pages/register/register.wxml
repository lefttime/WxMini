<import src="../../../common/head.wxml" />
<import src="../../../common/foot.wxml" />

<view class="page-body">
  <!--<template is="head" data="{{...userInfo}}"/>-->

  <view class="input-box">

    <view class="input-section">
      <view class="input-section-title">真实姓名</view>
      <view class="input-section-input">
        <input class="weui-input" auto-focus placeholder="请输入真实姓名" bindinput="realnameChanged" />
      </view>
    </view>

    <view class="input-section">
      <view class="input-section-title">微信号</view>
      <view class="input-section-input">
        <input class="weui-input" auto-focus placeholder="请输入微信号" bindinput="wechatChanged" />
      </view>
    </view>

    <view class="input-section">
      <view class="input-section-title">游戏ID</view>
      <view class="input-section-input">
        <input class="weui-input" auto-focus placeholder="请输入游戏ID" bindinput="gameIdChanged" />
      </view>
    </view>

    <view class="input-section">
      <view class="input-section-title">手机号</view>
      <view class="input-section-input">
        <input class="weui-input" auto-focus placeholder="请输入手机号" bindinput="phoneChanged" />
      </view>
      <view class="input-section-button">
        <button type="primary" size="mini" bindtap="sendCaptcha">发送验证码</button>
      </view>
    </view>

    <view class="input-section">
      <view class="input-section-title">验证码</view>
      <view class="input-section-input">
        <input class="weui-input" auto-focus placeholder="请输入验证码" bindinput="captchaChanged" />
      </view>
    </view>
  </view>

  <view class="submit-body">
    <view class="submit-item"><button type="primary" bindtap="registerPromoter">确定</button></view>
  </view>

  <!-- <template is="foot" /> -->
</view>
